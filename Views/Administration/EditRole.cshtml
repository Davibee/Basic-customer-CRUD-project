@using V3.ViewModels

@model EditRoleViewModel

<h1>Edit Role</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
            @Html.ValidationMessageFor(r => r.RoleName)
            @Html.ValidationSummary()
        </div>
    </div>




    <div class="form-group row">
        <div  class="col-sm-10">
            <button id="UpdateRole" data-customer-id="@Model.Id" asp-action="EditRole" asp-controller="Administration" type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListRoles" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }

            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUsersInRole" asp-controller="Administration" asp-route-roleId="@Model.Id" class="btn btn-primary" style="width:auto">Add or remove users</a>
        </div>
    </div>
</form>


@section scripts
{
    <script src="https://cdn.jsdelivr.net/npm/bootbox@5.5.2/dist/bootbox.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.js"></script>

    <script>$(document).ready(function () {
            $("#UpdateRole").on("click", function (e) {
                e.preventDefault(); // Prevent the default form submission action
                var button = $(this);

                bootbox.confirm("Are you sure you want to update this role?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/Administration/EditRole/" + button.attr("data-customer-id"),
                            method: "POST", // Assuming you're updating the role using a PUT request
                            success: function () {
                                // Role updated successfully, show a toast notification
                               
                                // After the success, manually submit the form
                                button.closest("form").submit();
                            }
                        });
                    }
                });
            });
        });</script>
}


<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
